FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o trufflehog-api ./cmd/api

FROM alpine:latest

RUN apk --no-cache add ca-certificates git

WORKDIR /root/

COPY --from=builder /app/trufflehog-api .

EXPOSE 8080

CMD ["./trufflehog-api", "-addr", ":8080"]
